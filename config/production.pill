Bluepill.application("laarcsearch", :log_file => "/var/www/laarcsearch/current/log/bluepill.log") do |app|
  app.process("laarcsearch-crawler") do |process|
    process.working_dir = "/var/www/laarcsearch/current"
    process.environment = { 'RAILS_ENV' => 'production' }

    process.start_grace_time    = 30.seconds
    process.stop_grace_time     = 30.seconds
    process.restart_grace_time  = 30.seconds

    process.start_command = "./bin/crawler"
    process.daemonize = true
    process.stdout = process.stderr = "/var/www/laarcsearch/shared/log/crawler.log"

    process.pid_file = "/var/www/laarcsearch/shared/pids/crawler.pid"
  end
  (1..16).each do |i|
    app.process("laarcsearch-delayed_job.#{i}") do |process|
      process.working_dir = "/var/www/laarcsearch/current"
      process.environment = { 'RAILS_ENV' => 'production' }

      process.start_grace_time    = 30.seconds
      process.stop_grace_time     = 30.seconds
      process.restart_grace_time  = 30.seconds

      process.start_command = "./bin/delayed_job start -i #{i}"
      process.stop_command  = "./bin/delayed_job stop -i #{i}"

      process.pid_file = "/var/www/laarcsearch/shared/pids/delayed_job.#{i}.pid"

      # seems our delayed_job workers get stucked, let's try to restart them every 2 hours (#49)
      process.checks :running_time, :every => 10.minutes, :below => 2.hours
    end
  end
end
